#:set programButtonColor (57/255, 72/255, 103/255, 1)
#:set instrumentButtonColor (57/255, 72/255, 103/255, 1)
#:set panelBackgroundColor (155/255, 164/255, 181/255, 1)
#:set graphBackgroundColor (0.95, 0.95, 0.95, 1)
#:set panelSize 0.08
#:set iconScaleFactor 0.7


<MainLayout>:
    BoxLayout:
        size_hint: 1, 1
        orientation: 'horizontal'

        BoxLayout:
            id: programButtonsPanelLayout
            size_hint: panelSize, 1
            orientation: 'vertical'
            padding: self.width/15, self.height/20, self.width/15, 0
            spacing: self.height/50

            canvas:
                Color:
                    rgba: panelBackgroundColor
                Rectangle:
                    pos: self.pos
                    size: self.size

            ProgramButton:
                id: openButton
                on_release: root.on_open_button_released()
                #text: 'open'
                Image:
                    source: '.\\icons\\folder2.png'
                    width: self.parent.width * iconScaleFactor
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y


            ProgramButton:
                id: saveButton
                on_release: root.on_save_button_released()
                #text: 'save'
                Image:
                    source: '.\\icons\\save.png'
                    width: self.parent.width * iconScaleFactor
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

#            ProgramButton:
#                id: shareButton
#                #text: 'share'
#                Image:
#                    source: '..\\icons\\share.png'
#                    width: self.parent.width * iconScaleFactor
#                    center_x: self.parent.center_x
#                    center_y: self.parent.center_y

            ProgramButton:
                id: infoButton
                on_release: root.on_info_button_released()
                #text: 'info'
                Image:
                    source: '.\\icons\\info.png'
                    width: self.parent.width * iconScaleFactor
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Widget:

        BoxLayout:
            id: graphLayout
            size_hint: 0.8, 1
            #padding: self.width/50, self.height/50, self.width/50, self.height/50

            canvas:
                Color:
                    rgba: graphBackgroundColor
                Rectangle:
                    pos: self.pos
                    size: self.size


        BoxLayout:
            id: instrumentButtonsPanelLayout
            size_hint: panelSize, 1
            orientation: 'vertical'
            padding: self.width/15, self.height/20, self.width/15, 0
            spacing: self.height/50

            canvas:
                Color:
                    rgba: panelBackgroundColor
                Rectangle:
                    pos: self.pos
                    size: self.size

            ToggleButton:
                id: zoomInButton
                size_hint_y: None
                height: self.width
                background_color: (0, 0, 0, 0)
                canvas.before:
                    Color:
                        rgba: instrumentButtonColor
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [self.height/5]
                on_press: root.on_zoom_in_button_pressed()
                text: 'zoom+'

            InstrumentButton:
                text: 'zoom-'
                on_release: root.on_zoom_out_button_released()

            InstrumentButton:
                text: 'phase'

            InstrumentButton:
                text: 'shift'

            Widget:

<InstrumentButton@Button>
    size_hint_y: None
    height: self.width
    background_color: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: instrumentButtonColor
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [self.height/5]

<ProgramButton@Button>
    size_hint_y: None
    height: self.width
    background_color: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: programButtonColor
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [self.height/5]

